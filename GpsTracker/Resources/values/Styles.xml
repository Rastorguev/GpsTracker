<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--TrackInfoWidget-->
<style name="TrackInfoWidgetContainer">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
  </style>
  <style name="TrackInfoWidgetContainerInner">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">horizontal</item>
  </style>
  <style name="TrackInfoWidgetValue">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/mainTextColor</item>
    <item name="android:textSize">@dimen/fontSizeLarge</item>
    <item name="android:gravity">left</item>
  </style>
  <style name="TrackInfoWidgetUnit">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/secondaryTextColor</item>
    <item name="android:textSize">@dimen/fontSizeSmall</item>
    <item name="android:gravity">left</item>
  </style>
  <style name="TrackInfoWidgetDefinition">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/accentTextColor</item>
    <item name="android:textSize">@dimen/fontSizeMedium</item>
    <item name="android:gravity">left</item>
    <item name="android:layout_marginTop">-7dip</item>
  </style>
  <!--ViewTrack-->
  <style name="ViewTrackCell">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="ViewTrackDefinition" parent="@style/ViewTrackCell">
    <item name="android:textColor">@color/accentTextColor</item>
    <item name="android:textSize">@dimen/fontSizeLarge</item>
    <item name="android:layout_marginRight">10dip</item>
  </style>
  <style name="ViewTrackValue"  parent="@style/ViewTrackCell">
    <item name="android:textColor">@color/mainTextColor</item>
    <item name="android:textSize">@dimen/fontSizeLarge</item>
    <item name="android:layout_marginRight">5dip</item>
  </style>
  <style name="ViewTrackUnit"  parent="@style/ViewTrackCell">
    <item name="android:textColor">@color/secondaryTextColor</item>
    <item name="android:textSize">@dimen/fontSizeMedium</item>
  </style>
</resources>